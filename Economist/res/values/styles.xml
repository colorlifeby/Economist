<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

   <!-- Стили для калькулятора -->
    <style name="calcButton" parent="android:Widget.Holo.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:minHeight">@dimen/calcMinBtnHieght</item>
        <item name="android:minWidth">@dimen/calcMinBtnWidth</item>
        <item name="android:textColor">@color/calc_btn_text_color</item>
        <item name="android:textSize">@dimen/calcButtonTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="calcButton.Num">
         <item name="android:background">@drawable/calc_btn_number</item>
         <item name="android:layout_margin">2dp</item>        
    </style>
    <style name="calcButton.AC">
         <item name="android:background">@drawable/calc_btn_ac</item>
         <item name="android:layout_margin">2dp</item>        
    </style>
    <style name="calcButton.Act">
         <item name="android:background">@drawable/calc_btn_act</item>
         <item name="android:layout_margin">2dp</item>        
    </style>
    <style name="calcButton.Enter">
         <item name="android:background">@drawable/calc_btn_act</item>
         <item name="android:layout_marginLeft">2dp</item>
         <item name="android:layout_marginTop">2dp</item>
    </style>

</resources>
